
<div class="row mt-2">
  <div class="col">
    <%= link_to 'New Photo', new_photo_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class="row mt-2">
  <% @photos.each do |photo| %>
    <div class="col-4">
       <%= image_tag(photo.image_url, class: 'img-fluid') %>
    </div>
    <div class="col-2">
      <%= photo.tags.join(', ') %>
    </div>
    <div class="col-2">
      <%= photo.used%>
    </div>
    <div class="col-4">
      <div class="btn-group  btn-group-sm">
        <% if photo.active? %>
          <%= link_to 'Deactivate', deactivate_photo_path(photo), class: 'btn btn-danger', method: :post %>
        <% else %>
          <%= link_to 'Activate', activate_photo_path(photo), class: 'btn btn-success', method: :post %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

